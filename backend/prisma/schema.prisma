generator client {
  provider = "prisma-client"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  author          String
  language        String?
  publishingHouse String?
  format          String
  publishedDate   String?
  description     String?
  coverUrl        String?
  createdAt       DateTime @default(now())
}