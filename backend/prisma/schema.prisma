generator client {
  provider = "prisma-client"
  output   = "./generated"
  engineType = "client"
  previewFeatures = ["postgressqlExtensions]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  author          String
  language        String?
  publishingHouse String?
  format          String
  publishedDate   String?
  description     String?
  coverUrl        String?
  createdAt       DateTime @default(now())
  embedding       Unsupported("vector(384))?
}